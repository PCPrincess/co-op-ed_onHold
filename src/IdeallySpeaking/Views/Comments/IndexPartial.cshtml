@model IEnumerable<IdeallySpeaking.Models.Comment>

@{
    ViewData["Title"] = "Article Comments";
}


@foreach (var item in Model) {
        <tr>
            @*  Keep the <tr>, it is required by FullArticle, however, the
                remainder of this PartialView will be styled with CSS.
                Possibly, the Bootstrap Media CSS will come in handy!*@
            <td>
                @Html.DisplayFor(modelItem => item.CommentDate)
            </td>          
            <td>
                @Html.DisplayFor(modelItem => item.Title)
                @Html.DisplayFor(modelItem => item.CommentContent)
            </td>            
            
            <td>                
                <a asp-action="Edit" asp-route-id="@item.CommentId">Edit</a> |                 |
                <a asp-action="Delete" asp-route-id="@item.CommentId">Delete</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
                @* Add CommentsRatingViewModel Properties (RatingUp, Down, etc.)
                    AND HTML/CSS to make it sparkle! *@
            </td>
        </tr>
}

