                    <button type="button" class="btn btn-secondary">3</button>
                    <button type="button" class="btn btn-secondary">4</button>
                </div>
            </td>            
        </tr>
    </tbody>
</table>
<div class="">
    <a id="commentHere"></a>
    @Html.Partial((string)ViewData["PartialURL"])    
</div>
<div>    
    <br />
    <p class="">
        <a href="#top" class="btn-sm btn-bracketed">Back to Top</a>  |
        <a asp-controller="Home" asp-action="Index" class="btn-sm btn-bracketed">Home</a>
    </p>
</div>
