    <thead><tr> </tr></thead>
    <tbody>
        <tr>            
            <td>
                @*
                @foreach (var item in Model)
                {

                    @Html.Partial("IndexPartial", item);
                }*@                 
                <div class="btn-group mb-2" role="group" aria-label="Pages">
                    <button type="button" class="btn btn-secondary">1</button>
