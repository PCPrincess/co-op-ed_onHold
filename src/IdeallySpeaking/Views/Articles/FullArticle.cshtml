@model IdeallySpeaking.Models.Article
@using Microsoft.AspNetCore.Identity

@{
    Layout = "_Layout";
    ViewData["Title"] = "Full Article";
    ViewData["PartialURL"] = "~/Views/Comments/CreatePartial.cshtml";
}
@* Check Facebook Meta Tags At: https://developers.facebook.com/tools/debug/  *@

<a id="top"></a>
   
<nav class="breadcrumb">
    <a class="breadcrumb-item" asp-controller="Home" asp-action="Index">Home</a>
    <a class="breadcrumb-item" asp-controller="ApplicationUser" asp-action="Profile">My Profile</a>
    <a class="breadcrumb-item" asp-controller="Account" asp-action="LogOff">Log Out</a>    
</nav>
<hr />
<table class="table table-bordered">
    <thead>
        <tr>
            <td>
                @Html.Partial("ArticleDetailsPartial")
            </td>            
        </tr>
    </thead>
    <tbody>
        <tr>            
            <td class="">
                @Html.Partial("ArticleContentPartial")                
            </td>
        </tr>
    </tbody>
</table>

<p class=""> 
    <a href="#commentHere" class="btn-sm btn-success">Add Comment</a>    
</p>
<hr />

<a href="#">First Post</a>  &raquo  <a href="#">Last Post</a>  &raquo  <a asp-controller="Comments" asp-action="PopularCommentsList">Popular Comments</a>  &raquo  <a href="#">My Posts</a>

